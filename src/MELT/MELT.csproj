<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Testing library to verify that the correct logs are generated by apps or libraries using the .NET Standard Microsoft.Extensions.Logging library.</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(MSBuildProjectName).Tests" />
    <InternalsVisibleTo Include="MELT.Serilog" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.1.0" />
  </ItemGroup>
</Project>
